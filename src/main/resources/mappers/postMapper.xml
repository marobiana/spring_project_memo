<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.marobiana.memo.post.dao.PostDAO">
	<select id="selectPostListByUserId" parameterType="map" resultType="com.marobiana.memo.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE
			`userId` = #{userId}
			<if test="standardId != null">
			<![CDATA[ 
			AND `id` <= #{standardId} 
			]]>
			</if>
		ORDER BY `id` DESC
		LIMIT ${limit}
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPost" parameterType="int" resultType="com.marobiana.memo.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE
			`id` = #{postId}
	</select>
	
	<update id="updatePost" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, updatedAt = NOW()
			<!-- imagePath가 있을 때만 수정한다. -->
			<if test="imagePath != null">, imagePath = #{imagePath}</if>
		WHERE
			`id` = #{id}
	</update>
	
	<delete id="deletePost" parameterType="int">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{id}
	</delete>
</mapper>